<% if object.errors.any? %>
    <div class="error-box">
        <h4>The form contains <%= pluralize(object.errors.count, "error") %>.</h4><br>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li>* <%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>