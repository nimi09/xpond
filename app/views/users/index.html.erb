<div class="std-block">
    <div class="container">
        <h1>All users</h1>
        <%= render 'shared/flash_messages', flash: flash %>
        <div class="align-center">
            <%= will_paginate %>
            <div class="user-signup-box align-left">
            <ul>
                <% @users.each do |user| %>
                    <li>
                        <%= link_to user.name, user%>
                        <%= user.fixes.count + user.ndbs.count + user.vors.count %>
                        <%= "contribution".pluralize(user.fixes.count) %>
                        <% if current_user.admin? && !current_user?(user) %>
                            | <%= user.email %>
                            | <%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure? \nYou are about to delete user:\n\n" + user.name } %>
                        <% end %>
                    </li>
                <% end %>
            </ul>
            </div>
            <%= will_paginate %>
        </div>
    </div>
</div>